---
const navLinks = [
  { href: "/#features", label: "Features" },
  { href: "/#roadmap", label: "Roadmap" },
  { href: "/#pricing", label: "Pricing" },
  { href: "/docs", label: "Docs" },
  { href: "/#faq", label: "FAQ" },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 border-b border-[#262626] bg-[#0a0a0a]/90 backdrop-blur-sm">
  <div class="mx-auto max-w-6xl px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="flex items-center">
        <img src="/images/gdagent transparent.svg" alt="GDAgentâ„¢" class="h-8" />
      </a>

      <div class="hidden items-center gap-8 md:flex">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-sm text-[#a1a1a1] no-underline transition-colors hover:text-white"
          >
            {link.label}
          </a>
        ))}
      </div>

      <button
        id="mobile-menu-toggle"
        class="flex h-10 w-10 items-center justify-center md:hidden"
        aria-label="Toggle menu"
      >
        <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile menu -->
  <div id="mobile-menu" class="grid grid-rows-[0fr] overflow-hidden opacity-0 transition-all duration-300 ease-in-out md:hidden">
    <div class="min-h-0">
      <div class="flex flex-col gap-4 border-t border-[#262626] px-6 py-4">
        {navLinks.map((link) => (
          <a
            href={link.href}
            class="text-sm text-[#a1a1a1] transition-colors hover:text-white"
          >
            {link.label}
          </a>
        ))}
      </div>
    </div>
  </div>
</nav>

<script>
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');

  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('grid-rows-[0fr]');
    menu?.classList.toggle('grid-rows-[1fr]');
    menu?.classList.toggle('opacity-0');
    menu?.classList.toggle('opacity-100');
  });
</script>
