---
const features = [
  {
    title: "Smart Onboarding",
    description: "First Run Wizard detects your environment. Auto-discovers AI tools and configures them instantly.",
    media: { type: "image" as const, src: "/images/feature-smart-onboarding.png" },
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>`,
  },
  {
    title: "Professional Layouts",
    description: "Split view, drag & drop. Organize your AI sessions exactly how you want them.",
    media: { type: "image" as const, src: "/images/feature-professional-layouts.png" },
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2"/><path d="M3 9h18"/><path d="M9 21V9"/></svg>`,
  },
  {
    title: "Persistent Sessions",
    description: "Auto-save with custom icons and labels. Pick up exactly where you left off.",
    media: { type: "image" as const, src: "/images/feature-persistent-sessions.png" },
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"/><polyline points="17 21 17 13 7 13 7 21"/><polyline points="7 3 7 8 15 8"/></svg>`,
  },
  {
    title: "Multi-Agent Support",
    description: "Use your preferred AI agents and models in parallel for maximum efficiency.",
    media: { type: "image" as const, src: "/images/feature-multi-agent.png" },
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="4" y="4" width="16" height="16" rx="2"/><rect x="9" y="9" width="6" height="6"/><path d="M15 2v2"/><path d="M15 20v2"/><path d="M2 15h2"/><path d="M2 9h2"/><path d="M20 15h2"/><path d="M20 9h2"/><path d="M9 2v2"/><path d="M9 20v2"/></svg>`,
  },
  {
    title: "Prompt Library",
    description: "Built-in templates for common Godot tasks. GDScript fixes, project settings, and more.",
    media: { type: "image" as const, src: "/images/feature-prompt-library.png" },
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/><path d="M8 7h8"/><path d="M8 11h6"/></svg>`,
  },
  {
    title: "Native Performance",
    description: "Rust-powered backend with a lag-free terminal. No Electron, no web viewsâ€”just pure speed.",
    media: { type: "image" as const, src: "/images/feature-native-performance.png" },
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"/></svg>`,
  },
];
---

<section id="features" class="py-16 md:py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="anim anim-fade-up mb-20 text-center">
      <h2 class="mb-4 font-mono text-3xl font-medium tracking-tight md:text-4xl lg:text-5xl">
        Built For Developers
      </h2>
      <p class="text-lg text-[#a1a1a1]">
        Everything you need for AI-assisted Godot development
      </p>
    </div>

    <div class="space-y-20 md:space-y-28">
      {features.map((feature, i) => (
        <div class={`anim anim-fade-up anim-d1 flex flex-col gap-8 md:gap-12 ${i % 2 === 1 ? 'md:flex-row-reverse' : 'md:flex-row'} md:items-center`}>
          {/* Text */}
          <div class="flex-1 space-y-4 md:space-y-6">
            <h3 class="flex items-center gap-3 font-mono text-2xl font-medium md:text-3xl">
              <span class="shrink-0 text-white"><Fragment set:html={feature.iconSvg} /></span>
              {feature.title}
            </h3>
            <p class="text-base leading-relaxed text-[#a1a1a1] md:text-lg">{feature.description}</p>
          </div>
          {/* Media */}
          <div class="flex-1">
            <div class="overflow-hidden rounded-xl border border-[#262626] bg-[#121212]">
              {feature.media.type === "video" ? (
                <video autoplay muted loop playsinline class="block w-full">
                  <source type="video/mp4" src={feature.media.src} />
                </video>
              ) : (
                <img
                  src={feature.media.src}
                  alt={feature.title}
                  width="960"
                  height="600"
                  class="block w-full"
                  loading="lazy"
                />
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
