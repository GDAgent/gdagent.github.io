---
const upcoming = [
  {
    title: "macOS & Mobile",
    description: "Native support for macOS (Intel and Apple Silicon), plus a full mobile port for iOS and Android.",
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="5" y="2" width="14" height="20" rx="2" ry="2"/><path d="M12 18h.01"/></svg>`,
  },
  {
    title: "Godot MCP Server",
    description: "A custom MCP server that lets AI agents read and modify your scenes, nodes, and project settings directly.",
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>`,
  },
  {
    title: "Project-Aware Context",
    description: "Automatic indexing of your scripts, scenes, and resources so AI responses are grounded in your actual project.",
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="11" cy="11" r="8"/><path d="m21 21-4.35-4.35"/><path d="M11 8v6"/><path d="M8 11h6"/></svg>`,
  },
  {
    title: "Plugins & Community Prompts",
    description: "Extend GDAgent with custom integrations and browse shared prompt packs for common workflows like save systems, multiplayer, and more.",
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M12 2v6"/><path d="m4.93 10.93 4.24 4.24"/><path d="M2 18h6"/><path d="M20 18h2"/><path d="m19.07 10.93-4.24 4.24"/><circle cx="12" cy="18" r="4"/></svg>`,
  },
  {
    title: "Auto-Snapshots",
    description: "Automatic checkpoint before every AI edit. If an agent breaks something, roll back to the last working state in one click.",
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M3 12a9 9 0 1 0 9-9 9.75 9.75 0 0 0-6.74 2.74L3 8"/><path d="M3 3v5h5"/><path d="M12 7v5l4 2"/></svg>`,
  },
  {
    title: "Cross-Agent Memory",
    description: "A shared knowledge base that all agents can read and write to. Decisions, conventions, and architecture notes persist across multiple agents and sessions.",
    iconSvg: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"/><polyline points="3.27 6.96 12 12.01 20.73 6.96"/><line x1="12" y1="22.08" x2="12" y2="12"/></svg>`,
  },
];
---

<section id="roadmap" class="py-16 md:py-20">
  <div class="mx-auto max-w-6xl px-6">
    <div class="anim anim-fade-up mb-12 text-center">
      <h2 class="mb-4 font-mono text-3xl font-medium tracking-tight md:text-4xl">
        What's Next
      </h2>
      <p class="text-[#a1a1a1]">
        On the roadmap and actively in development.
      </p>
    </div>

    <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3">
      {upcoming.map((item, i) => (
        <div class={`anim anim-fade-up anim-d${i + 1} flex items-start gap-4 rounded-lg border border-[#262626] bg-[#121212] p-5 transition-colors hover:border-[#404040]`}>
          <div class="shrink-0 text-[#a1a1a1]">
            <Fragment set:html={item.iconSvg} />
          </div>
          <div>
            <h3 class="mb-1 font-mono text-base font-medium">{item.title}</h3>
            <p class="text-sm leading-relaxed text-[#a1a1a1]">{item.description}</p>
          </div>
        </div>
      ))}
    </div>

    <div class="anim anim-fade-up anim-d7 mt-10 text-center">
      <a href="https://github.com/gdagent/gdagent/issues" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2.5 rounded-lg border border-[#262626] bg-[#121212] px-6 py-3 text-sm font-medium transition-colors hover:border-[#404040]">
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
        Report a Bug or Suggest a Feature
      </a>
    </div>
  </div>
</section>
