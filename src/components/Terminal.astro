---
interface Props {
  title?: string;
  lines: Array<{
    prompt?: string;
    command?: string;
    output?: string;
    color?: string;
  }>;
}

const { title = "terminal", lines } = Astro.props;
---

<div class="overflow-hidden rounded-lg border border-[#262626] bg-[#121212]">
  <!-- Terminal header -->
  <div class="flex items-center gap-2 border-b border-[#262626] px-4 py-3">
    <div class="flex gap-1.5">
      <div class="h-3 w-3 rounded-full bg-[#ff5f56]"></div>
      <div class="h-3 w-3 rounded-full bg-[#ffbd2e]"></div>
      <div class="h-3 w-3 rounded-full bg-[#27ca40]"></div>
    </div>
    <span class="ml-2 font-mono text-xs text-[#a1a1a1]">{title}</span>
  </div>

  <!-- Terminal content -->
  <div class="p-4 font-mono text-sm leading-relaxed">
    {lines.map((line) => (
      <div class="mb-1">
        {line.prompt && (
          <span class="text-[#27ca40]">{line.prompt}</span>
        )}
        {line.command && (
          <span class="text-white"> {line.command}</span>
        )}
        {line.output && (
          <div class:list={["text-[#a1a1a1]", line.color && `text-[${line.color}]`]}>
            {line.output}
          </div>
        )}
      </div>
    ))}
    <div class="inline-block h-4 w-2 animate-pulse bg-white"></div>
  </div>
</div>
