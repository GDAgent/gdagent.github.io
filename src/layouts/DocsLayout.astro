---
import "../styles/global.css";
import Nav from "../components/Nav.astro";
import DocsSidebar from "../components/docs/DocsSidebar.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  description?: string;
  image?: string;
  imageWidth?: number;
  imageHeight?: number;
  lang?: string;
  robots?: string;
}

const {
  title,
  description = "GDAgent documentation and guides for setup, features, and troubleshooting.",
  image = "/images/og/gdagent-og.png",
  imageWidth = 1200,
  imageHeight = 630,
  lang = "en",
  robots = "index,follow,max-image-preview:large",
} = Astro.props;
const currentPath = Astro.url.pathname;
const seoBase = Astro.site ?? Astro.url;
const canonicalUrl = new URL(Astro.url.pathname, seoBase).toString();
const imageUrl = new URL(image, seoBase).toString();
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    <meta name="theme-color" content="#0a0a0a" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="article" />
    <meta property="og:site_name" content="GDAgent" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:image:width" content={String(imageWidth)} />
    <meta property="og:image:height" content={String(imageHeight)} />
    <meta property="og:image:alt" content="GDAgent docs preview" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={imageUrl} />
    <meta name="twitter:site" content="@GDAgentDev" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <title>{title} | GDAgent Docs</title>
  </head>
  <body class="bg-[#0a0a0a] text-white">
    <Nav showDocsSidebarToggle={true} />

    <div class="mx-auto max-w-6xl px-6 pt-24 pb-8 md:pb-12">
      <div class="flex items-start gap-12">
        <DocsSidebar currentPath={currentPath} />

        <main class="min-w-0 flex-1">
          <article class="docs-prose">
            <slot />
          </article>
        </main>
      </div>
    </div>

    <Footer />
  </body>
</html>
