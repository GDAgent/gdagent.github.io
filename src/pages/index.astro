---
import Base from "../layouts/Base.astro";
import Nav from "../components/Nav.astro";
import Hero from "../components/Hero.astro";
import Features from "../components/Features.astro";
import Roadmap from "../components/Roadmap.astro";
import FeaturedPost from "../components/FeaturedPost.astro";
import Demo from "../components/Demo.astro";
import Pricing from "../components/Pricing.astro";
import FAQ from "../components/FAQ.astro";
import Footer from "../components/Footer.astro";
---

<Base
  title="GDAgent - AI Development Environment for Godot Engine"
  description="GDAgent turns Godot into a workspace-aware AI coding environment with persistent sessions, multi-agent layouts, and smart onboarding for popular CLI tools."
>
  <Nav />
  <main>
    <Hero />
    <hr class="mx-auto max-w-6xl border-t border-[#262626]" />
    <Features />
    <hr class="mx-auto max-w-6xl border-t border-[#262626]" />
    <Roadmap />
    <hr class="mx-auto max-w-6xl border-t border-[#262626]" />
    <FeaturedPost />
    <hr class="mx-auto max-w-6xl border-t border-[#262626]" />
    <Demo />
    <hr class="mx-auto max-w-6xl border-t border-[#262626]" />
    <Pricing />
    <hr class="mx-auto max-w-6xl border-t border-[#262626]" />
    <FAQ />
  </main>
  <Footer />
</Base>
